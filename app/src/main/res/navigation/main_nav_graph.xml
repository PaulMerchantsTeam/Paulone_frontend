<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">


    <action
        android:id="@+id/action_to_home"
        app:destination="@id/homeScreenFrag"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:launchSingleTop="true"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_to_menuScreen"

        app:launchSingleTop="true"
        app:popUpTo="@id/homeScreenFrag" />
    <action
        android:id="@+id/action_to_locateUs"
        app:destination="@id/locateUsFrag"
        app:launchSingleTop="true"
        app:popUpTo="@id/homeScreenFrag" />



    <action
        android:id="@+id/action_to_goldLoan"
        app:destination="@id/goldLoanScreenFrag"
        app:launchSingleTop="true"
        app:popUpTo="@id/homeScreenFrag" />

    <action
        android:id="@+id/action_to_resetPinCard"
        app:destination="@id/resetCardPinFrag"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:launchSingleTop="true"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
         />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.paulmerchants.gold.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_phoenNumVerifiactionFragment"
            app:destination="@id/phoenNumVerifiactionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/phoenNumVerifiactionFragment"
        android:name="com.paulmerchants.gold.ui.auth.PhoneNumVerificationFragment"
        android:label="PhoenNumVerifiactionFragment"
        tools:layout="@layout/phone_auth_fragment">
        <action
            android:id="@+id/action_phoenNumVerifiactionFragment_to_homeScreenFrag"
            app:destination="@id/homeScreenFrag"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/mainScreenFrag"
        android:name="com.paulmerchants.gold.ui.MainScreenFrag"
        android:label="MainScreenFrag"
        tools:layout="@layout/main_screen_fragment" />



    <fragment
        android:id="@+id/goldLoanScreenFrag"
        android:name="com.paulmerchants.gold.ui.bottom.GoldLoanScreenFrag"
        android:label="GoldLoanScreenFrag"
        tools:layout="@layout/gold_loan_screen_fragment" />
    <fragment
        android:id="@+id/locateUsFrag"
        android:name="com.paulmerchants.gold.ui.bottom.LocateUsFrag"
        android:label="LocateUsFrag"
        tools:layout="@layout/locate_us_screen_fragment" />
    <fragment
        android:id="@+id/homeScreenFrag"
        android:name="com.paulmerchants.gold.ui.bottom.HomeScreenFrag"
        android:label="HomeScreenFrag"
        tools:layout="@layout/home_screen_fragment">
        <action
            android:id="@+id/action_homeScreenFrag_to_notificationsScreenFrag"

            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/homeScreenFrag"
            app:popUpToInclusive="true" />
    </fragment>



    <fragment
        android:id="@+id/proceedToPay"
        android:name="com.paulmerchants.gold.ui.others.ProceedToPay"
        android:label="ProceedToPay"
        tools:layout="@layout/layout_loan_emi_proceed_to_pay" />








    <fragment
        android:id="@+id/profileFrag"
        android:name="com.paulmerchants.gold.ui.others.ProfileFrag"
        android:label="ProfileFrag"
        tools:layout="@layout/profile_layout" />
    <dialog
        android:id="@+id/quickPayDialog"
        android:name="com.paulmerchants.gold.ui.btmsheetDg.QuickPayDialog"
        android:label="QuickPayDialog"
        tools:layout="@layout/quick_pay_popup" />
    <fragment
        android:id="@+id/quickPayMainFrag"
        android:name="com.paulmerchants.gold.ui.others.QuickPayMainFrag"
        android:label="QuickPayMainFrag"
        tools:layout="@layout/check_out_window_fr_payment" />




    <fragment
        android:id="@+id/pmlGoldLoan"
        android:name="com.paulmerchants.gold.ui.others.PmlGoldLoan"
        android:label="PmlGoldLoan"
        tools:layout="@layout/pml_gold_loan" />



    <fragment
        android:id="@+id/resetCardPinFrag"
        android:name="com.paulmerchants.gold.ui.others.ResetCardPinFrag"
        android:label="ResetCardPinFrag"
        tools:layout="@layout/reset_card_pin" />
    <fragment
        android:id="@+id/transactionDoneScreenFrag"
        android:name="com.paulmerchants.gold.ui.others.TransactionDoneScreenFrag"
        android:label="TransactionDoneScreenFrag"
        tools:layout="@layout/transac_receipt" />

    <fragment
        android:id="@+id/resetMPinFrag"
        android:name="com.paulmerchants.gold.ui.others.ResetMPinFrag"
        android:label="ResetMPinFrag"
        tools:layout="@layout/reset_m_pin" />
    <dialog
        android:id="@+id/logoutDialog"
        android:name="com.paulmerchants.gold.ui.btmsheetDg.LogoutDialog"
        android:label="LogoutDialog"
        tools:layout="@layout/logout_dialog" />
    <fragment
        android:id="@+id/transactionFrag"
        android:name="com.paulmerchants.gold.ui.others.TransactionFrag"
        android:label="TransactionFrag"
        tools:layout="@layout/all_txn_frag" />
    <fragment
        android:id="@+id/paymentModesFragNew"
        android:name="com.paulmerchants.gold.ui.others.PaymentModesFragNew"
        android:label="PaymentModesFragNew"
        tools:layout="@layout/payments_mode_new" />
    <fragment
        android:id="@+id/loginScreenFrag"
        android:name="com.paulmerchants.gold.ui.auth.LoginScreenFrag"
        android:label="LoginScreenFrag"
        tools:layout="@layout/login_with_mobile_mpin" />
    <dialog
        android:id="@+id/appCloseDialog"
        android:name="com.paulmerchants.gold.ui.btmsheetDg.AppCloseDialog"
        android:label="AppCloseDialog" />
    <dialog
        android:id="@+id/paymentCloseDialog"
        android:name="com.paulmerchants.gold.ui.btmsheetDg.PaymentCloseDialog"
        android:label="PaymentCloseDialog" />
    <fragment
        android:id="@+id/paidReceiptFrag"
        android:name="com.paulmerchants.gold.ui.others.PaidReceiptFrag"
        android:label="PaidReceiptFrag" />
    <dialog
        android:id="@+id/resetMpinDialog"
        android:name="com.paulmerchants.gold.ui.btmsheetDg.ResetMpinDialog"
        android:label="ResetMpinDialog" />


</navigation>