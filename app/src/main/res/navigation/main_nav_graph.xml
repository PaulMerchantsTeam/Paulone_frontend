<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">


    <action
        android:id="@+id/action_to_home"
        app:destination="@id/homeScreenFrag"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:launchSingleTop="true"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_to_menuScreen"
        app:destination="@id/menuScreenFrag"
        app:launchSingleTop="true"
        app:popUpTo="@id/homeScreenFrag" />
    <action
        android:id="@+id/action_to_locateUs"
        app:destination="@id/locateUsFrag"
        app:launchSingleTop="true"
        app:popUpTo="@id/homeScreenFrag" />

    <action
        android:id="@+id/action_to_billsAndMore"
        app:destination="@id/billsAndMoreScreenFrag"
        app:launchSingleTop="true"
        app:popUpTo="@id/homeScreenFrag" />

    <action
        android:id="@+id/action_to_goldLoan"
        app:destination="@id/goldLoanScreenFrag"
        app:launchSingleTop="true"
        app:popUpTo="@id/homeScreenFrag" />

    <action
        android:id="@+id/action_to_resetPinCard"
        app:destination="@id/resetCardPinFrag"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:launchSingleTop="true"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        app:popUpTo="@id/pcFrag" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.paulmerchants.gold.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_phoenNumVerifiactionFragment"
            app:destination="@id/phoenNumVerifiactionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/phoenNumVerifiactionFragment"
        android:name="com.paulmerchants.gold.ui.auth.PhoenNumVerifiactionFragment"
        android:label="PhoenNumVerifiactionFragment"
        tools:layout="@layout/phone_auth_fragment">
        <action
            android:id="@+id/action_phoenNumVerifiactionFragment_to_homeScreenFrag"
            app:destination="@id/homeScreenFrag"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/mainScreenFrag"
        android:name="com.paulmerchants.gold.ui.MainScreenFrag"
        android:label="MainScreenFrag"
        tools:layout="@layout/main_screen_fragment" />

    <fragment
        android:id="@+id/billsAndMoreScreenFrag"
        android:name="com.paulmerchants.gold.ui.bottom.BillsAndMoreScreenFrag"
        android:label="BillsAndMoreScreenFrag"
        tools:layout="@layout/bill_n_more_screen_fragment" />

    <fragment
        android:id="@+id/goldLoanScreenFrag"
        android:name="com.paulmerchants.gold.ui.bottom.GoldLoanScreenFrag"
        android:label="GoldLoanScreenFrag"
        tools:layout="@layout/gold_loan_screen_fragment" />
    <fragment
        android:id="@+id/locateUsFrag"
        android:name="com.paulmerchants.gold.ui.bottom.LocateUsFrag"
        android:label="LocateUsFrag"
        tools:layout="@layout/locate_us_screen_fragment" />
    <fragment
        android:id="@+id/homeScreenFrag"
        android:name="com.paulmerchants.gold.ui.bottom.HomeScreenFrag"
        android:label="HomeScreenFrag"
        tools:layout="@layout/home_screen_fragment">
        <action
            android:id="@+id/action_homeScreenFrag_to_notificationsScreenFrag"
            app:destination="@id/notificationsScreenFrag"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/homeScreenFrag" />
    </fragment>
    <fragment
        android:id="@+id/menuScreenFrag"
        android:name="com.paulmerchants.gold.ui.bottom.MenuScreenFrag"
        android:label="MenuScreenFrag"
        tools:layout="@layout/menu_screen_fragment" />
    <fragment
        android:id="@+id/pcFrag"
        android:name="com.paulmerchants.gold.ui.others.PrepaidCardMainFrag"
        android:label="PcFrag"
        tools:layout="@layout/prepaid_screen_frag" />
    <!--    <fragment-->
    <!--        android:id="@+id/billsFragment"-->
    <!--        android:name="com.paulmerchants.gold.ui.others.BillsFragment"-->
