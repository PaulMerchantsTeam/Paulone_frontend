        android:name="com.paulmerchants.gold.ui.others.BillsFragment"
        android:label="BillsFragment"
        tools:layout="@layout/layout_loan_emi" />
    <fragment
        android:id="@+id/proceedToPay"
        android:name="com.paulmerchants.gold.ui.others.ProceedToPay"
        android:label="ProceedToPay"
        tools:layout="@layout/layout_loan_emi_proceed_to_pay" />
    <fragment
        android:id="@+id/addCardFrag"
        android:name="com.paulmerchants.gold.ui.others.AddCardFrag"
        android:label="AddCardFrag"
        tools:layout="@layout/loan_pay_inr_secure" />
    <fragment
        android:id="@+id/addUpiCard"
        android:name="com.paulmerchants.gold.ui.others.AddUpiCard"
        android:label="AddUpiCard"
        tools:layout="@layout/add_card_upi_screen" />
    <fragment
        android:id="@+id/paymentModesFrag"
        android:name="com.paulmerchants.gold.ui.others.PaymentModesFrag"
        android:label="PaymentModesFrag"
        tools:layout="@layout/payment_modes" />
    <fragment
        android:id="@+id/paymentConfirmed"
        android:name="com.paulmerchants.gold.ui.others.PaymentConfirmed"
        android:label="ConfirmedPayment"
        tools:layout="@layout/loan_emi_payment_confirmed" />
    <fragment
        android:id="@+id/transactionDetailFrag"
        android:name="com.paulmerchants.gold.ui.others.TransactionDetailFrag"
        android:label="TransactionDetailFrag"
        tools:layout="@layout/transaction_detail" />
    <fragment
        android:id="@+id/complaintRegister"
        android:name="com.paulmerchants.gold.ui.others.ComplaintRegister"
        android:label="ComplaintRegister"
        tools:layout="@layout/register_complaint" />


    <fragment
        android:id="@+id/profileFrag"
        android:name="com.paulmerchants.gold.ui.others.ProfileFrag"
        android:label="ProfileFrag"
        tools:layout="@layout/profile_layout" />
    <dialog
        android:id="@+id/quickPayDialog"
        android:name="com.paulmerchants.gold.ui.btmsheetDg.QuickPayDialog"
        android:label="QuickPayDialog"
        tools:layout="@layout/quick_pay_popup" />
    <fragment
        android:id="@+id/quickPayMainFrag"
        android:name="com.paulmerchants.gold.ui.others.QuickPayMainFrag"
        android:label="QuickPayMainFrag"
        tools:layout="@layout/check_out_window_fr_payment" />
    <fragment
        android:id="@+id/confirmPaymentDueFrag"
        android:name="com.paulmerchants.gold.ui.others.ConfirmPaymentDueFrag"
        android:label="ConfirmPaymentDueFrag"
        tools:layout="@layout/payment_confirmed_qk_py" />
    <fragment
        android:id="@+id/editProfileScreenFrag"
        android:name="com.paulmerchants.gold.ui.others.EditProfileScreenFrag"
        android:label="EditProfileScreenFrag"
        tools:layout="@layout/edit_profile_layout" />
    <fragment
