<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="14dp"
    android:layout_marginEnd="32dp"
    android:background="@color/splash_screen_two">

    <ImageView
        android:id="@+id/transacIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transc_gold_icon" />

    <TextView
        android:id="@+id/transacTitalTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="PML Gold Loan"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/transacIv"
        app:layout_constraintTop_toTopOf="@+id/transacIv" />

    <TextView
        android:id="@+id/transacDateAndTimeTv"
        style="@style/text_11_medium_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feb 1st, 2023 at 7:30 pm"
        android:textColor="@color/view_line_dark"
        app:layout_constraintBottom_toBottomOf="@+id/transacIv"
        app:layout_constraintStart_toStartOf="@+id/transacTitalTv"
        app:layout_constraintTop_toBottomOf="@+id/transacTitalTv" />

    <TextView
        android:id="@+id/amountTransacTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Rs 3500 "
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/transacDateAndTimeTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/transacTitalTv"
        app:layout_constraintTop_toTopOf="@+id/transacTitalTv" />
</androidx.constraintlayout.widget.ConstraintLayout>