<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/parentMainAction"
    android:padding="@dimen/ten_dp">


    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/itemTv"
        app:layout_constraintEnd_toEndOf="@+id/itemTv"
        app:layout_constraintStart_toStartOf="@+id/itemTv"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/apartment_group" />

    <TextView
        android:id="@+id/itemTv"
        style="@style/text_8_semi_bold_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dth_services"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>