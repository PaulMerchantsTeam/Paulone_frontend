<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/screen_start_margin"
    android:paddingEnd="@dimen/screen_end_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rec_sky_loan_blue_solid"
        android:padding="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loanNumTitle"
            style="@style/text_10_semi_bold_sky_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loan number"
            app:layout_constraintEnd_toStartOf="@+id/intPeriodTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loanNumTv"
            style="@style/text_12_bold_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="34543432"
            app:layout_constraintEnd_toStartOf="@+id/intPeriodNumTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loanNumTitle" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/intPeriodTitle"
            style="@style/text_10_semi_bold_sky_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Interest period"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/outStandLoanTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/intPeriodNumTv"
            style="@style/text_12_bold_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30 days"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/intPeriodTitle"
            app:layout_constraintTop_toBottomOf="@+id/intPeriodTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loanPrinceTitle"
            style="@style/text_10_semi_bold_sky_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Loan principal amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loanNumTv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loanPricepalNumTv"
            style="@style/text_12_bold_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="INR XXXXXX"
            app:layout_constraintEnd_toStartOf="@+id/outStandLoanNumTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loanPrinceTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loanPeriodTitle"
            style="@style/text_10_semi_bold_sky_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Loan period"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loanPricepalNumTv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loanPeriodNumTv"
            style="@style/text_12_bold_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="28/07/2022 - 28/07/2023"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loanPeriodTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/outStandLoanTitle"
            style="@style/text_10_semi_bold_sky_blue"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Outstanding loan amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intPeriodNumTv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/outStandLoanNumTv"
            style="@style/text_12_bold_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="INR XXXXXX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/outStandLoanTitle"
            app:layout_constraintTop_toBottomOf="@+id/outStandLoanTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_23"
        android:background="@drawable/rec_sky_loan_blue_solid"
        android:padding="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Loan Journey as of 28/02/2023"
            android:textColor="@color/splash_screen_three"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainProgressJoutney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView6">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loanStartedDateTv"
                style="@style/text_10_semi_bold_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="28/07/2022"
                app:layout_constraintBottom_toTopOf="@+id/linearProgressIndicator"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loanStartedDateTv2"
                style="@style/text_10_semi_bold_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/07/2023"
                app:layout_constraintBottom_toBottomOf="@+id/loanStartedDateTv"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/linearProgressIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:progress="50"
                android:scaleY="3"
                app:indicatorColor="@color/yellow_main"
                app:layout_constraintBottom_toBottomOf="@+id/mainProgressJoutney"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:trackColor="@color/white"
                app:trackCornerRadius="@dimen/_8sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gold_star"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/paidAmountLoanTV"
            style="@style/text_10_semi_bold_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid - INR 65,000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/mainProgressJoutney"
            app:layout_constraintStart_toStartOf="@+id/mainProgressJoutney"
            app:layout_constraintTop_toBottomOf="@+id/mainProgressJoutney" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_23sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
        app:layout_constraintVertical_bias="0.0">

        <include layout="@layout/pml_over_due_loan"
            android:id="@+id/dueLoanParent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>