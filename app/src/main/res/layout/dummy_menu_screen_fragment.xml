<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/ten_dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!--        <com.google.android.material.appbar.CollapsingToolbarLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:contentScrim="@color/view_color"-->
        <!--            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">-->

        <!--            <androidx.appcompat.widget.Toolbar-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="65dp"-->
        <!--                android:background="@color/splash_screen_three"-->
        <!--                app:layout_collapseMode="pin"-->
        <!--                app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar" />-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topMenuParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_one_sky_b_grad"
            android:paddingBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                style="@style/text_16_bold_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                android:text="@string/menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--        </com.google.android.material.appbar.CollapsingToolbarLayout>-->
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_top_radius_19"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topMenuParent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/dummy_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Prithvi Kumar"
                android:textColor="@color/splash_screen_three"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/shapeableImageView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="a****@gmail.com"
                android:textColor="@color/white_gray"
                app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
                app:layout_constraintStart_toStartOf="@+id/userNameTv" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/text_12_bold_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rec_one_yellow_btn_9"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:paddingEnd="15dp"
                android:paddingBottom="12dp"
                android:text="View Profile"
                android:textColor="@color/splash_screen_one"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/userNameTv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shapeableImageView">

                <ImageView
                    android:id="@+id/gpIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gold_point_half"
                    app:layout_constraintBottom_toTopOf="@+id/goldMenuParent"
                    app:layout_constraintStart_toStartOf="@+id/goldMenuParent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goldMenuParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_card_small_rad_14_1"
                    app:layout_constraintBottom_toBottomOf="@+id/prepaidMenuCard"
                    app:layout_constraintEnd_toStartOf="@+id/prepaidMenuCard"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/prepaidMenuCard">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/gpTv"
                        style="@style/text_10_medium_sky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="18dp"
                        android:text="Gold Points"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/goldPointNumTv"
                        style="@style/text_11_medium_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="0 Points"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/gpTv"
                        app:layout_constraintStart_toStartOf="@+id/gpTv"
                        app:layout_constraintTop_toBottomOf="@+id/gpTv" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:id="@+id/pcIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gold_point_half"
                    app:layout_constraintBottom_toTopOf="@+id/prepaidMenuCard"
                    app:layout_constraintStart_toStartOf="@+id/prepaidMenuCard" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/prepaidMenuCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_card_small_rad_14_1"
                    app:layout_constraintBottom_toBottomOf="@+id/neddSuppMenuCard"
                    app:layout_constraintEnd_toStartOf="@+id/neddSuppMenuCard"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/goldMenuParent"
                    app:layout_constraintTop_toTopOf="@+id/neddSuppMenuCard">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/pcTv"
                        style="@style/text_10_medium_sky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="18dp"
                        android:text="Prepaid Card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/prepaidCardNumTv"
                        style="@style/text_11_medium_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="INR 0 Bal."
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/pcTv"
                        app:layout_constraintStart_toStartOf="@+id/pcTv"
                        app:layout_constraintTop_toBottomOf="@+id/pcTv" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:id="@+id/callUsIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gold_point_half"
                    app:layout_constraintBottom_toTopOf="@+id/neddSuppMenuCard"
                    app:layout_constraintStart_toStartOf="@+id/neddSuppMenuCard" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/neddSuppMenuCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_card_small_rad_14_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/prepaidMenuCard"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/nsTv"
                        style="@style/text_10_medium_sky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="18dp"
                        android:text="Need Support?"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/needSyuuportTv"
                        style="@style/text_11_medium_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Call Us"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/nsTv"
                        app:layout_constraintStart_toStartOf="@+id/nsTv"
                        app:layout_constraintTop_toBottomOf="@+id/nsTv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/view_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/optionItemMenuRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="6dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                tools:itemCount="4"
                tools:listitem="@layout/item_option_menu" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/servicesRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/optionItemMenuRv"
                tools:itemCount="5"
                tools:listitem="@layout/item_service_menu" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>