<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_two">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_6sdp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/view_color"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/splash_screen_three"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topMenuParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_one_sky_b_grad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView7"
                    style="@style/text_16_bold_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_36sdp"
                    android:text="@string/menu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/materialTextView7"
                    android:padding="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialTextView7">

                    <LinearLayout
                        android:id="@+id/linearOne"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_90sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/progressPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_bold"
                        android:text="0 Points"
                        android:textColor="@color/splash_screen_one"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintBottom_toBottomOf="@+id/linearOne"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearOne" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/progressPointDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="@string/pay_bill_point_desc"
                        android:textAlignment="gravity"
                        android:textColor="@color/splash_screen_three"
                        android:textSize="@dimen/_9ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearOne" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_top_radius_19"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topMenuParent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/screen_start_margin"
                android:layout_marginTop="@dimen/screen_start_margin"
                android:src="@drawable/dummy_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Prithvi Kumar"
                android:textColor="@color/splash_screen_three"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/shapeableImageView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="a****@gmail.com"
                android:textColor="@color/white_gray"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
                app:layout_constraintStart_toStartOf="@+id/userNameTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/viewProfileVBtn"
                style="@style/text_12_bold_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/screen_end_margin"
                android:background="@drawable/rec_one_yellow_btn_9"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_9sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingBottom="@dimen/_9sdp"
                android:text="View Profile"
                android:textColor="@color/splash_screen_one"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/userNameTv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_27sdp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shapeableImageView">

                <ImageView
                    android:id="@+id/gpIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gold_point_half"
                    app:layout_constraintBottom_toTopOf="@+id/goldMenuParent"
                    app:layout_constraintStart_toStartOf="@+id/goldMenuParent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goldMenuParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_card_small_rad_14_1"
                    app:layout_constraintBottom_toBottomOf="@+id/prepaidMenuCard"
                    app:layout_constraintEnd_toStartOf="@+id/prepaidMenuCard"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/prepaidMenuCard">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/gpTv"
                        style="@style/text_10_medium_sky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/screen_start_margin"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/screen_end_margin"
                        android:text="Gold Points"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/goldPointNumTv"
                        style="@style/text_11_medium_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="0 Points"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/gpTv"
                        app:layout_constraintStart_toStartOf="@+id/gpTv"
                        app:layout_constraintTop_toBottomOf="@+id/gpTv" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:id="@+id/pcIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gold_point_half"
                    app:layout_constraintBottom_toTopOf="@+id/prepaidMenuCard"
                    app:layout_constraintStart_toStartOf="@+id/prepaidMenuCard" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/prepaidMenuCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_card_small_rad_14_1"
                    app:layout_constraintBottom_toBottomOf="@+id/neddSuppMenuCard"
                    app:layout_constraintEnd_toStartOf="@+id/neddSuppMenuCard"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/goldMenuParent"
                    app:layout_constraintTop_toTopOf="@+id/neddSuppMenuCard">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/pcTv"
                        style="@style/text_10_medium_sky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/screen_start_margin"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/screen_end_margin"
                        android:text="Prepaid Card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/prepaidCardNumTv"
                        style="@style/text_11_medium_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="INR 0 Bal."
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/pcTv"
                        app:layout_constraintStart_toStartOf="@+id/pcTv"
                        app:layout_constraintTop_toBottomOf="@+id/pcTv" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:id="@+id/callUsIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gold_point_half"
                    app:layout_constraintBottom_toTopOf="@+id/neddSuppMenuCard"
                    app:layout_constraintStart_toStartOf="@+id/neddSuppMenuCard" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/neddSuppMenuCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_card_small_rad_14_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/prepaidMenuCard"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/nsTv"
                        style="@style/text_10_medium_sky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/screen_start_margin"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/screen_end_margin"
                        android:text="Need Support?"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/needSyuuportTv"
                        style="@style/text_11_medium_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="Call Us"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/nsTv"
                        app:layout_constraintStart_toStartOf="@+id/nsTv"
                        app:layout_constraintTop_toBottomOf="@+id/nsTv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/view_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/optionItemMenuRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                tools:itemCount="4"
                tools:listitem="@layout/item_option_menu" />


            <EditText
                android:id="@+id/transacSearchView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:background="@drawable/rec_search_"
                android:drawableStart="@drawable/search"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semi_bold"
                android:hint="@string/search_yr_transac"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/splash_screen_one"
                android:textColorHint="@color/view_line"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                android:textSize="@dimen/_10ssp"
                app:autoShowKeyboard="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/optionItemMenuRv"
                app:queryHint="@string/search"
                app:searchIcon="@drawable/search" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/servicesRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transacSearchView"
                tools:itemCount="5"
                tools:listitem="@layout/item_transaction_services" />


            <include
                android:id="@+id/lotteAwards"
                layout="@layout/item_rewards_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transacSearchView" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>