<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/rec_one__light_blue_4">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/paulMerTv"
        style="@style/text_12_poppins_medium_sky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/right_arrow_blue"
        android:padding="@dimen/_10sdp"
        android:text="@string/paul_merchants"
        android:textColor="@color/splash_screen_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewHor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/splash_screen_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paulMerTv" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/amountTv"
        style="@style/text_16_semi_bold_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="INR 60,000"

        android:textColor="@color/splash_screen_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewHor"
         />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cardNameTv"
        style="@style/text_12_poppins_medium_sky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Gold Loan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountTv" />

</androidx.constraintlayout.widget.ConstraintLayout>