<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_two">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gotoGPayApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pleas_google_pay_app"
        android:layout_marginTop="@dimen/_62sdp"
        style="@style/text_16_semi_bold_blue"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_hor"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_62sdp"
        android:layout_marginTop="@dimen/_62sdp"
        android:layout_marginEnd="@dimen/_62sdp"
        android:background="@color/view_color_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoGPayApp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/timerTv"
        style="@style/text_16_semi_bold_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_39sdp"
        android:text="04:59"
        android:textSize="@dimen/_29sdp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_hor" />

</androidx.constraintlayout.widget.ConstraintLayout>