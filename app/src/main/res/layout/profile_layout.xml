<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_two">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/ten_dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/appBarCollaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/view_color"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/splash_screen_two"
                app:layout_collapseMode="parallax"
                app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backProfileIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/splash_screen_two"
                android:paddingBottom="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/backIv"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginStart="@dimen/screen_end_margin"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:src="@drawable/back_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profileTv"
                    style="@style/text_16_bold_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/profile"
                    android:textColor="@color/splash_screen_one"
                    app:layout_constraintBottom_toBottomOf="@+id/backIv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/backIv" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/fab"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/circle_profile_blue_white"
        android:padding="@dimen/_8sdp"
        android:visibility="gone"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="center|bottom"
        app:srcCompat="@drawable/camera" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parenntProfleCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/screen_end_margin"
                android:layout_marginTop="@dimen/_42sdp"
                android:layout_marginEnd="@dimen/screen_end_margin"
                android:background="@drawable/rec_three_btn_7_empty"
                android:paddingStart="@dimen/screen_end_margin"
                android:paddingTop="@dimen/_9sdp"
                android:paddingEnd="@dimen/screen_end_margin"
                android:paddingBottom="@dimen/_9sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/prsnalInfoTv"
                    style="@style/text_10_medium_sky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_information"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/nameUserTv"
                    style="@style/text_16_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="User"
                    android:textColor="@color/splash_screen_one"
                    app:layout_constraintStart_toStartOf="@+id/prsnalInfoTv"
                    app:layout_constraintTop_toBottomOf="@+id/prsnalInfoTv" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/emailUserIv"
                    style="@style/text_10_semi_bold_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintStart_toStartOf="@+id/nameUserTv"
                    app:layout_constraintTop_toBottomOf="@+id/nameUserTv" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/userNumTv"
                    style="@style/text_10_semi_bold_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintStart_toStartOf="@+id/emailUserIv"
                    app:layout_constraintTop_toBottomOf="@+id/emailUserIv" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/addressTv"
                    style="@style/text_10_medium_sky"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="12dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/userNumTv"
                    app:layout_constraintTop_toBottomOf="@+id/userNumTv" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/editProfileBtn"
                    style="@style/text_10_semi_bold_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_one_yellow_btn_9"
                    android:paddingStart="@dimen/screen_end_margin"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingEnd="@dimen/screen_end_margin"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="@string/edit_profile"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profileSettingsRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parenntProfleCard"
                tools:itemCount="3"
                tools:listitem="@layout/item_service_menu" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/appVersion"
                style="@style/text_10_medium_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:text="version"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileSettingsRv" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>