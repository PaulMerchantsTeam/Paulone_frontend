                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_rect"
                android:padding="10dp"
                android:text="123456"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billNoTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dueDateTv"
                style="@style/text_12_semi_bold_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:text="@string/due_date"
                android:textColor="@color/pg_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enteredBillNoTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/enteredDueDateTv"
                style="@style/text_12_regular_white"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_rect"
                android:padding="10dp"
                android:text="13/12/2023"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dueDateTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/billAmountTv"
                style="@style/text_12_semi_bold_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:text="@string/bill_amount"
                android:textColor="@color/pg_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enteredDueDateTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/enteredBillAmountTv"
                style="@style/text_12_regular_white"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_rect"
                android:padding ="10dp"
                android:text = "INR 2500"
                android:textColor ="@color/text_color"
                app:layout_constraintEnd_toEndOf ="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billAmountTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/conFeesTv"
                style="@style/text_12_semi_bold_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:text="@string/customer_convenience_fees"
                android:textColor="@color/pg_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enteredBillAmountTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/enteredConFeesTv"
                style="@style/text_12_regular_white"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_rect"
                android:padding="10dp"
                android:text="INR 0"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conFeesTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/totalAmountTv"
                style="@style/text_12_semi_bold_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:text="@string/total_amount"
                android:textColor="@color/pg_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enteredConFeesTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/enteredTotalAmountTv"
                style="@style/text_12_regular_white"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_rect"
                android:padding="10dp"
                android:text="INR 2500"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalAmountTv" />


        </androidx.constraintlayout.widget.ConstraintLayout>
