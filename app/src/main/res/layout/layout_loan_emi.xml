                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_rect"
                android:padding="10dp"
                android:text="2 months"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billPeriodTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/billNoTv"
                style="@style/text_12_semi_bold_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:text="@string/bill_number"
                android:textColor="@color/pg_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enteredBillPeriodTv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/enteredBillNoTv"
                style="@style/text_12_regular_white"
