<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/ten_dp"
    android:elevation="0dp"
    app:cardCornerRadius="14dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dueLoanParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_sky_loan_blue_solid"
        android:paddingEnd="@dimen/ten_dp"
        app:layout_constraintEnd_toStartOf="@+id/loanpaidAmountParent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ovrDueParentArrow"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@drawable/rectangle_due_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/overDueDaysTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Overdue by 4 days"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.32999998" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView3"
            style="@style/text_12_semi_bold_sky"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Due Interest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ovrDueParentArrow" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dueAmountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:text="INR 6,000"
            android:textColor="@color/splash_screen_one"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/materialTextView3"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView3" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/payNowBtn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rec_one_blue_btn"
            android:drawableEnd="@drawable/ic_arrow_yellow"
            android:drawablePadding="@dimen/ten_dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center_vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:text="Pay Now"
            android:textColor="@color/yellow_main"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dueAmountTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loanpaidAmountParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_sky_loan_blue_solid"
        app:layout_constraintBottom_toBottomOf="@+id/dueLoanParent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dueLoanParent"
        app:layout_constraintTop_toTopOf="@+id/dueLoanParent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loanIntTite"
            style="@style/text_12_semi_bold_sky"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Last interest amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/paidAmountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:text="INR 6,000"
            android:textColor="@color/splash_screen_one"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/loanIntTite"
            app:layout_constraintTop_toBottomOf="@+id/loanIntTite" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/wasPaidTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center_vertical"
            android:text="was paid on 27/03/2023"
            android:textColor="@color/splash_screen_three"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/paidAmountTv"
            app:layout_constraintTop_toBottomOf="@+id/paidAmountTv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/viewStateMent"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rec_back_btn"
            android:drawablePadding="@dimen/ten_dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center_vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:text="View statement"
            android:textColor="@color/splash_screen_one"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wasPaidTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dueLoanParent">

        <com.google.android.material.textview.MaterialTextView
            style="@style/text_12_semi_bold_sky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need Support?\n\nCall us at 1800xxxxxxx"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>