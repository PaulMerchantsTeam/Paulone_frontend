<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/pay_modes_back"
    android:paddingHorizontal="22dp"
    android:paddingVertical="11dp">


    <ImageView
        android:id="@+id/payImageOptTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cardPcNumTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/prepdCardTv"
        app:srcCompat="@drawable/paul_pay_small" />

    <TextView
        android:id="@+id/prepdCardTv"
        style="@style/text_10_medium_sky"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:layout_marginStart="13dp"
        android:text="Prepaid card"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/cardPcNumTv"
        app:layout_constraintStart_toEndOf="@+id/payImageOptTv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardPcNumTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx xxxx xxxx 4536"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/prepdCardTv"
        app:layout_constraintTop_toBottomOf="@+id/prepdCardTv" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payImageOptTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payImageOptTv"
        app:srcCompat="@drawable/arrow_right_black" />
</androidx.constraintlayout.widget.ConstraintLayout>

