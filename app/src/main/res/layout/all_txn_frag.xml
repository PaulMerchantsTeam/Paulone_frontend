<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_two">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topMenuParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_green_coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/backIv"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/screen_end_margin"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/back_arrow_white"
            app:layout_constraintBottom_toBottomOf="@+id/materialTextView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView7"
            style="@style/text_16_bold_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_transaction"
            android:textColor="@color/splash_screen_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationViewCall"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_minus4sdp"
            android:layout_marginBottom="@dimen/_minus12sdp"
            app:layout_constraintBottom_toTopOf="@+id/neddSuppMenuCard"
            app:layout_constraintStart_toStartOf="@+id/neddSuppMenuCard"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/need_support" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/neddSuppMenuCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/menu_card_small_rad_14_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView7">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/nsTv"
                style="@style/text_10_medium_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_start_margin"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/screen_end_margin"
                android:text="Need Support?"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/needSyuuportTv"
                style="@style/text_11_medium_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Call Us"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/nsTv"
                app:layout_constraintStart_toStartOf="@+id/nsTv"
                app:layout_constraintTop_toBottomOf="@+id/nsTv" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    <com.google.android.material.textview.MaterialTextView-->
    <!--        android:id="@+id/materialTextView6"-->
    <!--        style="@style/text_11_medium_blue"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:background="@drawable/rec_back_btn"-->
    <!--        android:padding="@dimen/_5sdp"-->
    <!--        android:text="Success"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/topMenuParent" />-->

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenuParent"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Failed" />
    </com.google.android.material.chip.ChipGroup>

    <!--    <include-->
    <!--        android:id="@+id/header_transDetail"-->
    <!--        -->
    <!--        layout="@layout/header_layout"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTxnAll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbarSize="@dimen/_5sdp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_group"
        tools:itemCount="5"
        tools:listitem="@layout/item__txn_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>